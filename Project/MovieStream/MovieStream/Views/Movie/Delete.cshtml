@model MovieStream.Models.MovieDto

@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Are you sure you want to delete this movie?</h2>

<div>
    <p><strong>@Model.Title</strong></p>
    <p>Genre: @Model.Genre</p>
    <p>Release Date: @Model.ReleaseDate.ToShortDateString()</p>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.MovieId">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
