@model IEnumerable<MovieStream.Models.MovieDto>

@{
    ViewData["Title"] = "Movies List";
}

<h2 class="mb-4">Movies List</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Movie</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
